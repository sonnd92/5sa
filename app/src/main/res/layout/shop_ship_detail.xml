<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:mContext=".activity.shop.ShopShipDetailActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/order_ship_detail_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Custom">

        <include
            android:id="@+id/order_detail_toolbar"
            layout="@layout/fiveship_action_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:id="@+id/order_detail_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/order_ship_detail_app_bar"
        android:background="#ebebeb"
        android:orientation="vertical"
        android:visibility="invisible">

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipe_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
            android:layout_weight="1">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/box_message_ship_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/fiveship_common_white"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/message_ship_detail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_message_ship_detail"
                            android:drawablePadding="10dp"
                            android:padding="10dp"
                            android:textColor="#e93a3a"
                            android:textSize="18dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:background="@color/menu_divider" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/box_step_ship_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingBottom="30dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="30dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/step_ship_detail1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:adjustViewBounds="true"
                                    android:maxWidth="120dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/bg_ds_receive_blank" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="20dp"
                                    android:layout_marginTop="10dp"
                                    android:gravity="center"
                                    android:text="Nhận hàng" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/step_ship_detail_line1"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="-15dp"
                                android:layout_weight="1"
                                android:background="#D3D3D3" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/step_ship_detail2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:adjustViewBounds="true"
                                    android:maxWidth="120dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/bg_ds_shipping_blank" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="20dp"
                                    android:layout_marginTop="10dp"
                                    android:gravity="center"
                                    android:text="Giao hàng" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/step_ship_detail_line2"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="-15dp"
                                android:layout_weight="1"
                                android:background="#D3D3D3" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/step_ship_detail3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:adjustViewBounds="true"
                                    android:maxWidth="120dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/bg_ds_finish_blank" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="20dp"
                                    android:layout_marginTop="10dp"
                                    android:gravity="center"
                                    android:text="Đã giao" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/step_ship_detail_line3"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="-15dp"
                                android:layout_weight="1"
                                android:background="#D3D3D3" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/step_ship_detail4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:adjustViewBounds="true"
                                    android:maxWidth="120dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/bg_ds_complete_blank" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="20dp"
                                    android:layout_marginTop="10dp"
                                    android:gravity="center"
                                    android:text="Kết thúc" />

                            </LinearLayout>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/list_divider" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/urgent_banner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/fiveship_common_white"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/message_urgent_order"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawablePadding="10dp"
                            android:gravity="start|center"
                            android:padding="10dp"
                            android:text="Đơn hàng cần vận chuyển gấp"
                            android:textColor="#D14444"
                            android:visibility="visible" />

                        <ImageView
                            android:id="@+id/iv_urgent_order"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|end"
                            android:src="@drawable/ic_urgent"
                            android:visibility="visible" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/fiveship_common_white"
                        android:orientation="horizontal"
                        android:paddingBottom="20dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="20dp">

                        <ImageView
                            android:id="@+id/order_image"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:scaleType="centerCrop" />

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:background="@color/menu_divider" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:baselineAligned="false"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/address_box"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginTop="6dp"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="4dp"
                                            android:scaleType="fitCenter"
                                            android:src="@drawable/ic_detail_from" />

                                        <View
                                            android:layout_width="@dimen/dot_repeat_width"
                                            android:layout_height="0dp"
                                            android:layout_marginLeft="@dimen/dot_layout_margin_left"
                                            android:layout_weight="1"
                                            android:background="@drawable/dot_repeate_img" />

                                    </LinearLayout>

                                    <TextView
                                        android:id="@+id/order_dt_from_address"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="13dp"
                                        android:drawablePadding="15dp"
                                        android:fontFamily="sans-serif-light"
                                        android:textColor="@color/fiveship_common_text"
                                        android:textSize="14sp" />
                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#eeeeee" />

                    <LinearLayout
                        android:id="@+id/action_box"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/btn_share_jouney"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:background="#f9f9f9"
                            android:paddingLeft="25dp"
                            android:paddingRight="15dp"
                            android:paddingBottom="15dp"
                            android:paddingTop="15dp"
                            android:drawablePadding="5dp"
                            android:gravity="center"
                            android:drawableLeft="@drawable/ic_share_jouney"
                            android:text="Chia sẻ hành trình"/>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#eeeeee" />

                        <TextView
                            android:id="@+id/btn_order_ship_detail_tracking"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:background="#f9f9f9"
                            android:padding="15dp"
                            android:gravity="center"
                            android:text="Theo dõi đơn hàng"
                            android:textColor="#ff6600" />

                    </LinearLayout>

                    <!--todo-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:background="@color/fiveship_common_white"
                        android:orientation="vertical"
                        android:paddingBottom="15dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="15dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Thông tin shipper"
                            android:textColor="#363b47"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Shipper"
                                android:textColor="@color/detail_field_title_color" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:gravity="right"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/order_dt_detail_shipper"
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentBottom="true"
                                        android:gravity="center"
                                        android:singleLine="true"
                                        android:textSize="16sp" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:layout_marginTop="2dp"
                                        android:background="#ff6600" />
                                </LinearLayout>

                            </LinearLayout>

                            <ImageView
                                android:id="@+id/order_dt_detail_shipper_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:adjustViewBounds="true"
                                android:scaleType="centerCrop" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/order_info_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:text="Thông tin đơn hàng"
                            android:textColor="#383C47" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/order_detail_info_layout_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/fiveship_common_white"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/order_detail_info_box"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="170dp"
                                    android:layout_height="wrap_content"
                                    android:text="Thời gian giao"
                                    android:textColor="@color/detail_field_title_color" />

                                <TextView
                                    android:id="@+id/order_dt_detail_date"
                                    style="@style/FiveShip.DetailOrderTextView" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="170dp"
                                    android:layout_height="wrap_content"
                                    android:text="Tiền hàng"
                                    android:textColor="@color/detail_field_title_color" />

                                <TextView
                                    android:id="@+id/order_dt_detail_cost"
                                    style="@style/FiveShip.DetailOrderTextView" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="170dp"
                                    android:layout_height="wrap_content"
                                    android:text="Tiền ship"
                                    android:textColor="@color/detail_field_title_color" />

                                <TextView
                                    android:id="@+id/order_dt_detail_cost_ship"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1"
                                    android:gravity="end"
                                    android:singleLine="false"
                                    android:textColor="@color/colorPrimary"
                                    android:textStyle="bold" />

                                <LinearLayout
                                    android:id="@+id/btn_change_shipping_cost"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:background="@drawable/btn_clean_radius_background"
                                    android:onClick="changeShippingCost"
                                    android:padding="5dp"
                                    android:visibility="gone">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:drawableLeft="@drawable/ic_change_shipping_cost"
                                        android:drawablePadding="5dp"
                                        android:text="Thay đổi phí ship"
                                        android:textSize="12sp" />
                                </LinearLayout>

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_marginTop="8dp"
                                android:background="@color/menu_divider" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="170dp"
                                    android:layout_height="wrap_content"
                                    android:text="Tên đơn hàng"
                                    android:textColor="@color/detail_field_title_color" />

                                <TextView
                                    android:id="@+id/order_dt_detail_name"
                                    style="@style/FiveShip.DetailOrderTextView" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="170dp"
                                    android:layout_height="wrap_content"
                                    android:text="Đặc tính"
                                    android:textColor="@color/detail_field_title_color" />

                                <TextView
                                    android:id="@+id/order_dt_detail_property"
                                    style="@style/FiveShip.DetailOrderTextView" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="170dp"
                                    android:layout_height="wrap_content"
                                    android:text="Ghi chú"
                                    android:textColor="@color/detail_field_title_color" />

                                <TextView
                                    android:id="@+id/order_dt_detail_note"
                                    style="@style/FiveShip.DetailOrderTextView" />

                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/order_summary_info_title_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:text="Tổng tiền" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/order_summary_info_layout_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/fiveship_common_white"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="170dp"
                                android:layout_height="wrap_content"
                                android:text="Tên đơn hàng"
                                android:textColor="@color/detail_field_title_color" />

                            <TextView
                                android:id="@+id/group_detail_name"
                                style="@style/FiveShip.DetailOrderTextView" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="170dp"
                                android:layout_height="wrap_content"
                                android:text="Tổng tiền hàng"
                                android:textColor="@color/detail_field_title_color" />

                            <TextView
                                android:id="@+id/group_detail_pre_pay"
                                style="@style/FiveShip.DetailOrderTextView" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="170dp"
                                android:layout_height="wrap_content"
                                android:text="Tổng tiền ship"
                                android:textColor="@color/detail_field_title_color" />

                            <TextView
                                android:id="@+id/group_detail_shipping_cost"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:singleLine="false"
                                android:textColor="@color/colorPrimary"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:id="@+id/btn_change_group_shipping_cost"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/btn_clean_radius_background"
                                android:onClick="changeShippingCost"
                                android:padding="5dp"
                                android:visibility="gone">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawableLeft="@drawable/ic_change_shipping_cost"
                                    android:drawablePadding="5dp"
                                    android:text="Thay đổi phí ship"
                                    android:textSize="12sp" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

            </ScrollView>

        </android.support.v4.widget.SwipeRefreshLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/btn_order_ship_detail_call"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/btn_call_shop_ship_detail_background"
                android:gravity="center"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_phone_white"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:text="Gọi điện"
                    android:textAllCaps="true"
                    android:textColor="#ffffff" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/btn_order_ship_detail_shipper_empty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:visibility="gone">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/grey_DA_light" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/back_ground_grey"
                    android:text="@string/no_any_shipper_assign_ship_text"
                    android:textColor="@color/grey_DA_lightest" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_order_ship_detail_shipper"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#FF6600"
                android:text=""
                android:textColor="#ffffff"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_order_ship_detail_cancel"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#fea469"
                android:text="Hủy đơn"
                android:textColor="#ffffff"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_order_ship_detail_reset"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#FF6600"
                android:text="Gia hạn "
                android:textColor="#ffffff"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_order_ship_detail_done"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#FF6600"
                android:text="Kết thúc"
                android:textColor="#ffffff"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

    <include
        android:id="@+id/layout_loading"
        layout="@layout/fiveship_loading_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center" />

    <include
        android:id="@+id/vs_no_result"
        layout="@layout/fiveship_no_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="invisible" />

</RelativeLayout>
