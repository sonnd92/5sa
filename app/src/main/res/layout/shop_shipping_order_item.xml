<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/fiveship_list_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:background="@color/fiveship_common_white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/message_item_list_ship_expired"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_date_end"
                        android:drawablePadding="10dp"
                        android:gravity="left|center"
                        android:padding="10dp"
                        android:text="Đơn hết hạn"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/message_item_list_ship_wait"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_time_orange"
                        android:drawablePadding="10dp"
                        android:gravity="left|center"
                        android:padding="10dp"
                        android:text="Đơn mới đang chờ shipper"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/message_item_list_ship_receive"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_waiting"
                        android:drawablePadding="10dp"
                        android:gravity="left|center"
                        android:padding="10dp"
                        android:text="Đang chờ shipper nhận hàng"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/message_item_list_ship_shipping"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_car_green"
                        android:drawablePadding="10dp"
                        android:gravity="left|center"
                        android:padding="10dp"
                        android:text="Đang giao hàng"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/message_item_list_ship_end"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_done"
                        android:drawablePadding="10dp"
                        android:gravity="left|center"
                        android:padding="10dp"
                        android:text="Shiper đã giao, bạn vui lòng xác nhận"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/message_item_list_ship_complete"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_done"
                        android:drawablePadding="10dp"
                        android:gravity="left|center"
                        android:padding="10dp"
                        android:text="Kết thúc"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/message_item_list_ship_cancel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_cancel"
                        android:drawablePadding="10dp"
                        android:gravity="left|center"
                        android:padding="10dp"
                        android:text="Đã hủy"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/message_urgent_order"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="10dp"
                        android:gravity="start|center"
                        android:padding="10dp"
                        android:text="Đơn hàng cần vận chuyển gấp"
                        android:textColor="#D14444"
                        android:visibility="gone" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_urgent_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|end"
                    android:src="@drawable/ic_urgent"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F0F0F0" />

            <LinearLayout
                android:id="@+id/action_detail_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="15dp">

                <FrameLayout
                    android:layout_width="65dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/order_image"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:id="@+id/order_time_create"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_gravity="center|bottom"
                        android:background="@color/fiveship_bg_dim_color"
                        android:fontFamily="sans-serif-light"
                        android:gravity="center"
                        android:textColor="@color/fiveship_common_white"
                        android:textSize="11sp" />
                </FrameLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/menu_divider" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="6dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_detail_from" />

                            <View
                                android:layout_width="@dimen/dot_repeat_width"
                                android:layout_height="0dp"
                                android:layout_marginLeft="@dimen/dot_layout_margin_left"
                                android:layout_weight="1"
                                android:background="@drawable/dot_repeate_img" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/shipping_from"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="13dp"
                            android:drawablePadding="15dp"
                            android:fontFamily="sans-serif-light"
                            android:textColor="@color/fiveship_common_text"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/delivery_to_address_box"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingEnd="0dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="0dp"
                    android:paddingStart="15dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="KHOẢNG CÁCH"
                        android:textColor="@color/grey_DA_light"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/order_distance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:textColor="@color/grey_DA_light"
                        android:textSize="10sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingEnd="0dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="0dp"
                    android:paddingStart="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="THỜI GIAN GIAO"
                        android:textColor="@color/grey_DA_light"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/order_start_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:textColor="@color/grey_DA_light"
                        android:textSize="10sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingEnd="0dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="0dp"
                    android:paddingStart="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="TIỀN HÀNG"
                        android:textColor="@color/grey_DA_light"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/order_pre_pay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:textColor="@color/grey_DA_light"
                        android:textSize="10sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingEnd="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingStart="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="TIỀN SHIP"
                        android:textColor="@color/grey_DA_light"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/order_shipping_cost"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/btn_cancel_ship"
                    style="@style/ButtonShippingOrderAct"
                    android:background="@drawable/btn_grey_radius_background"
                    android:text="Hủy đơn"
                    android:textColor="@color/grey_DA_lightest" />

                <TextView
                    android:id="@+id/btn_refresh_ship"
                    style="@style/ButtonShippingOrderAct"
                    android:background="@drawable/btn_orange_radius_background"
                    android:textColor="@drawable/title_order_accept_selector"
                    android:text="Gia hạn"/>

                <TextView
                    android:id="@+id/btn_call_ship"
                    style="@style/ButtonShippingOrderAct"
                    android:background="@drawable/btn_clean_radius_background"
                    android:text="Gọi điện"
                    android:textColor="#959595" />

                <TextView
                    android:id="@+id/btn_tracking_ship"
                    style="@style/ButtonShippingOrderAct"
                    android:background="@drawable/btn_orange_radius_background"
                    android:text="Theo dõi"
                    android:textColor="@drawable/title_order_accept_selector" />

                <TextView
                    android:id="@+id/btn_confirm_complete"
                    style="@style/ButtonShippingOrderAct"
                    android:background="@drawable/btn_orange_radius_background"
                    android:text="Xác nhận"
                    android:textColor="@drawable/title_order_accept_selector" />

                <TextView
                    android:id="@+id/action_change_shipping_cost"
                    style="@style/ButtonShippingOrderAct"
                    android:background="@drawable/btn_clean_radius_background"
                    android:text="Thay đổi giá ship"
                    android:textColor="#959595" />

                <TextView
                    android:id="@+id/btn_list_shipper"
                    style="@style/ButtonShippingOrderAct"
                    android:background="@drawable/btn_assign_accept_selector"
                    android:text="@string/view_list_shipper_assign_ship_text"
                    android:textColor="@color/fiveship_common_white" />

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>