<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/info_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="15dp"
            android:text="Thông tin đơn hàng 01"
            android:textColor="#383C47" />

        <ImageView
            android:id="@+id/btn_delete_delivery_info"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_remove_small"
            android:background="@drawable/selector"
            android:scaleType="center"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/summary_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/fiveship_common_white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/info_summary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_phone"
            android:drawablePadding="15dp"
            android:drawableStart="@drawable/ic_phone"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            android:singleLine="true"
            android:text="0987654321 - 216 Thái Hà, Đống Đa, Hn" />
    </LinearLayout>
</LinearLayout>