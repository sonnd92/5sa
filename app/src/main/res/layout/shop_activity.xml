<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/shop_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:mContext=".activity.shop.ShopActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:baselineAligned="false"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/shop_app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Custom">

            <include layout="@layout/fiveship_action_bar_home"
                android:id="@+id/shop_toolbar"
                android:layout_height="match_parent"
                android:layout_width="match_parent" />

        </android.support.design.widget.AppBarLayout>

        <FrameLayout
            android:id="@+id/shop_layout_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/shop_menu"
        android:layout_width="@dimen/menu_layout_width"
        android:layout_height="match_parent"
        android:layout_gravity="start" />

</android.support.v4.widget.DrawerLayout>

