<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:mContext=".activity.HelloActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_login"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:src="@drawable/ic_logo_white"
            android:scaleType="centerInside"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/fiveship_common_white"
            android:textSize="32sp"
            android:padding="30dp"
            android:text="Xin chào ! Bạn là"/>

        <TextView
            android:id="@+id/is_shipper_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="50dp"
            android:drawableLeft="@drawable/ic_shipper_white"
            android:textColor="@color/fiveship_common_white"
            android:layout_margin="20dp"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:drawablePadding="10dp"
            android:textSize="18sp"
            android:text="Tôi là shipper"
            android:background="@drawable/btn_choose_ship_or_shop_background"
            android:drawableRight="@drawable/ic_arrow_right"/>

        <TextView
            android:id="@+id/is_shop_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="50dp"
            android:drawableLeft="@drawable/ic_shop_white"
            android:textColor="@color/fiveship_common_white"
            android:text="Tôi là shop bán hàng"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:drawablePadding="10dp"
            android:textSize="18sp"
            android:padding="10dp"
            android:background="@drawable/btn_choose_ship_or_shop_background"
            android:drawableRight="@drawable/ic_arrow_right"/>

    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_back_chosen_type"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:padding="20dp"
        android:background="@color/transparent"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_arrow_left"
        android:scaleType="centerCrop"/>

</RelativeLayout>
