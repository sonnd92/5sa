<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:padding="10dp"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/message_avatar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:layout_margin="3dp"
        android:src="@drawable/default_avatar" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/message_avatar"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:text="Nhiệm vụ:"
                android:textColor="#959595"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/quest_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#353E47"
                android:text="Ship trên 8 đơn nội thành"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:text="Nhận thưởng:"
                android:textColor="#959595"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/quest_gift"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#353E47"
                android:text="20.000 đ"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:text="Tình trạng:"
                android:textColor="#959595"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/quest_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FF6600"
                android:text="Hoàn thành"
                android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>