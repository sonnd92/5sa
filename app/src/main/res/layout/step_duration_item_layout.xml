<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/fiveship_common_white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/step_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector"
        android:drawableLeft="@drawable/direction_step_i"
        android:drawablePadding="15dp"
        android:fontFamily="sans-serif-light"
        android:padding="7dp"
        android:textColor="@color/direction_step_info"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/step_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="42dp"
            android:paddingRight="8dp"
            android:textColor="@color/text_color_list_view_default"
            android:textSize="10sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_gravity="center"
            android:background="@color/list_divider" />

    </LinearLayout>

</LinearLayout>