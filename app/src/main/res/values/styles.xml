<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    <style name="NonActivityDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryHighlight</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
    </style>

    <style name="fiveship_default_text">
        <item name="android:textSize">@dimen/fiveship_default_text_size</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="fiveship_default_text.singleline" parent="@style/fiveship_default_text">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="fiveship_login_account_text.singleline" parent="@style/fiveship_default_text.singleline">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="com_garena_gamecenter_text.singleline" parent="@style/fiveship_default_text">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="LoginInputLayout" parent="MyMaterialTheme.Base">
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
    </style>
    <style name="FloatingHintLabel" parent="MyMaterialTheme.Base">
        <item name="android:textColorHint">@color/fiveship_txt_color_hint_white</item>
        <item name="android:textSize">18.0sp</item>
        <item name="colorAccent">@color/fiveship_txt_color_hint_white</item>
        <item name="colorControlNormal">@color/fiveship_txt_color_hint_white</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:textColor">@color/fiveship_edit_text_login</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="RegisterInputLayout" parent="MyMaterialTheme.Base">
        <item name="android:textColorHint">#ffcfd5e2</item>
        <item name="android:textSize">16sp</item>
        <item name="colorAccent">#ffcfd5e2</item>
        <item name="colorControlNormal">#ffcfd5e2</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:textColor">@color/fiveship_edit_text_login</item>
    </style>

    <style name="FloatingHintLabel.Dark" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">@color/fiveship_default_text</item>
        <item name="android:textColorHint">@color/fiveship_default_text</item>
    </style>

    <style name="MyActionBar">
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="actionMenuTextColor">@color/textColorPrimary</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="ThemeOverlay.AppCompat.Custom" parent="Platform.ThemeOverlay.AppCompat.Light">
        <item name="android:windowBackground">@color/background_material_light</item>
        <item name="android:colorForeground">@color/bright_foreground_material_light</item>
        <item name="android:colorForegroundInverse">@color/bright_foreground_material_dark</item>
        <item name="android:colorBackground">@color/background_material_light</item>
        <item name="android:colorBackgroundCacheHint">
            @color/abc_background_cache_hint_selector_material_light
        </item>

        <item name="android:windowContentOverlay">@null</item>

        <item name="android:textColorPrimary">@color/fiveship_default_text</item>
        <item name="android:textColorPrimaryInverse">@color/abc_primary_text_material_light</item>
        <item name="android:textColorSecondary">@color/abc_secondary_text_material_light</item>
        <item name="android:textColorSecondaryInverse">@color/abc_secondary_text_material_dark
        </item>
        <item name="android:textColorTertiary">@color/abc_secondary_text_material_light</item>
    </style>

    <style name="FlatButtonRight" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">20.0sp</item>
        <item name="android:textColor">@color/fiveship_default_blue</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:layout_gravity">center_vertical|right</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:background">@drawable/selector</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="DetailOrderAction" parent="@style/TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/selector</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="DetailOrderLabel" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#ff275f80</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="DetailOrderCardView">
        <item name="android:layout_marginLeft">7dp</item>
        <item name="android:layout_marginRight">7dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="RatingStar">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:paddingLeft">2dp</item>
    </style>

    <style name="FiveShip" />

    <style name="FiveShip.DialogStyle" parent="@style/FiveShip" />

    <style name="FiveShip.DialogStyle.Button" parent="@style/FiveShip.DialogStyle">
        <item name="android:textSize">@dimen/dialog_button_text_size</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">@drawable/selector</item>
        <item name="android:gravity">center</item>
        <item name="android:height">@dimen/dialog_button_size</item>
    </style>

    <style name="FiveShip.DialogStyle.ButtonDivider" parent="@style/FiveShip.DialogStyle">
        <item name="android:background">@drawable/dialog_button_divider</item>
        <item name="android:width">1.0dip</item>
    </style>

    <style name="FiveShip_DialogStyle_Container_Form" parent="@style/FiveShip.DialogStyle">

        <item name="android:windowSoftInputMode">stateHidden|adjustResize</item>
        <item name="android:minWidth">@dimen/dialog_min_width</item>
        <item name="android:dialogTitle">@style/FiveShip.DialogStyle.Title</item>
        <item name="android:buttonStyle">@style/FiveShip.DialogStyle.Button</item>
    </style>

    <style name="FiveShip.DialogStyle.Container" parent="@style/FiveShip.DialogStyle">
        <item name="android:background">@drawable/dialog_bg</item>
        <item name="android:windowSoftInputMode">stateHidden|adjustResize</item>
        <item name="android:minWidth">@dimen/dialog_min_width</item>
        <item name="android:dialogTitle">@style/FiveShip.DialogStyle.Title</item>
        <item name="android:buttonStyle">@style/FiveShip.DialogStyle.Button</item>
    </style>

    <style name="FiveShip.DialogStyle.Title" parent="@style/FiveShip.DialogStyle">
        <item name="android:textSize">@dimen/dialog_title_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/fiveship_common_white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:paddingLeft">@dimen/dialog_padding</item>
        <item name="android:height">@dimen/dialog_title_size</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="FiveShip.DetailOrderTextView">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:singleLine">false</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="FiveShip.DropDownStyle.Dark" parent="@style/Widget.AppCompat.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_ab_background_dark</item>
        <item name="android:dropDownSelector">@drawable/selector_dark</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_dark</item>
        <item name="background">@drawable/spinner_ab_background_dark</item>
    </style>

    <style name="FiveShip.DropDownStyle.Dark.Overlay" parent="@style/Widget.AppCompat.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_ab_background_dark</item>
        <item name="android:dropDownSelector">@drawable/selector_dark</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_dark_opacity</item>
        <item name="background">@drawable/spinner_ab_background_dark</item>
    </style>

    <style name="FiveShip.DropDownStyle.Light" parent="@style/Widget.AppCompat.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_ab_background</item>
        <item name="android:dropDownSelector">@drawable/selector</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel</item>
        <item name="background">@drawable/spinner_ab_background</item>
    </style>

    <!--float button -->
    <style name="MenuLabelsStyle">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="WhiteText" parent="@android:style/TextAppearance">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="GreyText" parent="@android:style/TextAppearance">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="RatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_bar</item>
        <item name="android:minHeight">33dip</item>
        <item name="android:maxHeight">35dip</item>
    </style>

    <declare-styleable name="UnderlinedTextView" >
        <attr name="underlineWidth" format="dimension" />
        <attr name="underlineColor" format="color" />
    </declare-styleable>

    <style name="ButtonShippingOrderAct">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="CancelRadioButtonStyle" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/reason_cancel_shipping_selector</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">#5a5a5a</item>
    </style>

    <style name="Color1SwitchStyle">
        <item name="colorControlActivated">@color/fiveship_common_white</item>
    </style>

    <style name="TooltipLayoutStlye">
        <item name="ttlm_padding">15dip</item>
        <item name="ttlm_strokeColor">#dedede</item>
        <item name="ttlm_backgroundColor">@color/fiveship_common_white</item>
        <item name="ttlm_strokeWeight">1dip</item>
        <item name="ttlm_cornerRadius">6dip</item>
        <item name="ttlm_overlayStyle">@style/ToolTipOverlayCustomStyle</item>
        <item name="android:textAppearance">@style/ToolTipTextStyle</item>
    </style>

    <style name="ToolTipTextStyle">
        <item name="android:textStyle"></item>
        <item name="android:textColor">@color/text_color_list_view_default</item>
    </style>

    <style name="ToolTipOverlayCustomStyle">
        <item name="android:color">@color/fiveship_common_white</item>
        <item name="ttlm_repeatCount">1</item>
        <item name="ttlm_duration">600</item>
        <item name="android:alpha">0.2</item>
        <item name="android:layout_margin">8dp</item>
    </style>
</resources>
